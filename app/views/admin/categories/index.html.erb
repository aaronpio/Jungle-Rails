<section class="admin-products-index">

  <header class="page-header">
    <h1>Admin &raquo; All Categories</h1>
  </header>

  <div class="well">
    <%= link_to "+ New Category", admin_categories_new_path, class: 'btn btn-info' %>
  </div>
  
  <section class="categories-show">
  <% @categories.each do |category| %>
    <header class="page-header">
            <h3>
            <%= category.name %>
            </h3>
            <p>
            <%= "Count: #{category.products.count}" %>
            </p>
            </header>
            <% end %>

    </section>

</section>
